{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // 컴포넌트 출력여부
    "declaration": true, // .d.ts 파일생성 옵션 타입스크립트 지원위해 true
    "outDir": "./dist"
  },
  "include": [
    "./src/lib/**/*.tsx", "./src/lib/**/*.ts", "./src/lib/**/*.css", 
  ],
  "exclude": [
    "node_modules/*"
  ]
}
